<%= render 'layouts/header' %>

<div class="container">
	<div class="row">
		<div class="helper-edit-box" style="width: 75%; margin: 0 auto;">
			<div style="max-width:415px; margin: 0 auto;">
				<%= form_for @user, url: helper_update_user_path(@user) do |f| %>
					<h3 class="">お買い物ヘルパー情報編集</h3>
					<table>
						<tr>
							<td><b>ヘルパー1</b></td>
							<td><%= f.text_field :helper_name_1, style: 'height: 35px;', placeholder: 'お名前' %></td>
							<td><%= f.text_field :helper_address_1, style: 'width: 100%; height: 35px;', placeholder: 'メールアドレス' %></td>
						</tr>
						<tr>
							<td><b>ヘルパー2</b></td>
							<td><%= f.text_field :helper_name_2, style: 'height: 35px;', placeholder: 'お名前' %></td>
							<td><%= f.text_field :helper_address_2, style: 'width: 100%; height: 35px;', placeholder: 'メールアドレス' %></td>
						</tr>
						<tr>
							<td><b>ヘルパー3</b></td>
							<td><%= f.text_field :helper_name_3, style: 'height: 35px;', placeholder: 'お名前' %></td>
							<td><%= f.text_field :helper_address_3, style: 'width: 100%; height: 35px;', placeholder: 'メールアドレス' %></td>
						</tr>
					</table>
						<%= f.submit '更新', class: 'btn main-btn col-xs-12' %>
				<% end %>
			</div>
		</div>
	</div>
</div>

<%= render 'layouts/footer' %>