<%= render 'layouts/admin_header' %>
<div class="container">
	<div class="row">

		<div class="col-xs-12 clearfix">
			<h3>ユーザー情報一覧</h3>
			<!-- 登録情報欄 -->
			<div class="col-xs-6" style="float:left;">
				<h4 class=table-caption>ご登録情報 </h4>
				<%= link_to "編集", profile_edit_user_path(@user), class: 'btn btn-default', style: 'float: right;' %>
				<table class="table table-bordered">
					<tr>
						<td>お名前</td>
						<td><%= @user.last_name %> <%= @user.first_name %> 様
						</td>
					</tr>
					<tr>
						<td>メールアドレス</td>
						<td><%= @user.email %></td>
					</tr>
					<tr>
						<td>パスワード</td>
						<td>***********（セキュリティ保護のため非表示）</td>
					</tr>
				</table>
			</div>

			<!-- マイレシピ欄 -->
			<div class="col-xs-6" style="float:left;" >
				<h4 class=table-caption>マイレシピ </h4>
				<%= link_to "一覧を見る", my_recipe_path, class: 'btn btn-default', style: 'float: right;' %>
				<table class="table table-bordered">
					<thead>
							<tr>
								<th>レシピ名</th>
								<th>ご登録日</th>
							</tr>
						</thead>
					<% @user.recipes.each do |mr| %>
					<tbody>
						<tr>
							<td><%= mr.recipe_name %></td>
							<td><%= mr.created_at.to_s(:created_at) %></td>
						</tr>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>

		<div class="col-xs-12">
			<!-- お買い物ヘルパー欄 -->
			<div class="col-xs-6" style="float:left;">
				<h4 class=table-caption>お買い物ヘルパー一覧</h4>
				<%= link_to "編集", helper_edit_user_path(@user), class: 'btn btn-default', style: 'float: right;' %>
				<table class="table table-bordered">
						<tr>
							<th>No.</th>
							<th>お名前</th>
							<th>メールアドレス</th>
						</tr>
						<tr>
							<td>1</td>
							<td><%= @user.helper_name_1 %> 様</td>
							<td><%= @user.helper_address_1 %></td>
						</tr>
						<tr>
							<td>2</td>
							<td><%= @user.helper_name_2 %> 様</td>
							<td><%= @user.helper_address_2 %></td>
						</tr>
						<tr>
							<td>3</td>
							<td><%= @user.helper_name_3 %> 様</td>
							<td><%= @user.helper_address_3 %></td>
						</tr>
				</table>
			</div>

			<!-- お気に入りレシピ欄 -->
			<div class="col-xs-6" style="float:left;" >
				<h4 class=table-caption>お気に入りレシピ</h4>
				<%= link_to "一覧を見る", favorites_path, class: 'btn btn-default', style: 'float: right;' %>
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>レシピ名</th>
							<th>ご登録日</th>
						</tr>
					</thead>
					<% @user.favorites.each do |fr| %>
					<tbody>
						<tr>
							<td><%= fr.recipe.recipe_name %></td>
							<td><%= fr.recipe.created_at.to_s(:created_at) %></td>
						</tr>
					</tbody>
					<% end %>
				</table>
			</div>
	</div>
</div>
</div>


<%= render 'layouts/admin_footer' %>