<%= render 'layouts/admin_header' %>
<div class="container">
	<div class="row">
		<div class="" style="margin: 30px auto 15px auto;">
		<h3>ユーザー一覧</h3>
			<table class="table">
				<tr>
					<th>ID</th>
					<th>名前</th>
					<th>名前（かな）</th>
					<th>メールアドレス</th>
					<th>登録日</th>
					<th>最終ログイン日</th>
					<th>マイレシピ保有数</th>
					<th>ステータス</th>
				</tr>
		<% @users.each do |users| %>
				<tr>
					<td><%= users.id %></td>
					<td><%= link_to admin_user_path(users.id) do %>
							<%= users.last_name %><%= users.first_name %>
						<% end %>
					</td>
					<td><%= users.last_name_kana %><%= users.first_name_kana %></td>
					<td><%= users.email %></td>
					<td><%= users.created_at.strftime('%Y/%m/%d') %></td>
					<td><% if users.last_sign_in_at == nil %>
						<p> - </p>
						<% else %>
						<%= users.last_sign_in_at.strftime('%Y/%m/%d') %>
						<% end %>
					</td>
					<td><%= users.recipes.count %></td>
					<td><%= users.retire_flag %>
						<% if users.retire_flag == '会員' %>
							<%= link_to '退会させる', admin_user_retire_path(users.id), class: 'btn' %>
						<% else %>
							<%= link_to '復活させる', admin_user_entitle_path(users.id), class: 'btn' %>
						<% end %>
					</td>
				</tr>
		<% end %>
			</table>
		</div>
	</div>
</div>
<%#= render 'layouts/admin_footer' %>