<%= render 'layouts/admin_header' %>
<div class="container">
	<div class="row">
		<div class="" style="max-width: 380px; margin: 30px auto 15px auto; text-align: center;">
		<h3>管理者プロフィール編集</h3>
			<%= form_for @admin, url: admin_administrator_path(current_user.id) do |f| %>
			<table class="table">
					<tr>
						<th>名前</th>
						<td><%= f.text_field :name %></td>
					</tr>
					<tr>
						<th>メールアドレス</th>
						<td><%= f.email_field :email %></td>
					</tr>
			</table>
			<%= f.submit "更新", class: 'btn main-btn'  %>
			<% end %>
		</div>
	</div>
</div>
<%= render 'layouts/admin_footer' %>