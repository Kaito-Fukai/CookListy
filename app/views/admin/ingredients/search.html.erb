<div class="container">
	<%= render 'layouts/admin_header' %>
		<div class="row">
			<!-- 新規追加とか表のうえのメニュー -->
			<div class="col-xs-12">
				<div class="col-xs-12">
					<p> 登録済み食材 全<%#= 食材の件数 %> 件中 ○○件を表示 </p>
				</div>
				<div class="col-xs-4">
					<%= form_for @new, url: admin_ingredients_path do |f| %>
						<%= f.text_field :name %>
						<%= f.text_field :name_kana %>
						<%= f.text_field :name_with_unit %>
						<%= f.select :unit_id, Unit.all.map { |u| [u.unit_name, u.id] } %>
						<%= f.text_field :unit_in_lists %>
						<%= f.text_field :category %>
						<%= f.number_field :specific_gravity %>
						<%= f.submit "食材を新規追加する" %>
						<% end %>
				</div>
				<div class="col-xs-4">
					<%= search_form_for @q, :url => admin_ingredients_search_path do |f| %>
						<dt>
							<%= f.search_field :name_kana, class: "form-control search-form", placeholder: "search" %>
						</dt>
						<dd>
							<%= button_tag :type => "submit", :class =>"btn btn-default" do %>
							<i class='glyphicon glyphicon-search'></i>
							<% end %>
						</dd>
					<% end %>
				</div>
				<div class="col-xs-4">
					<button type="">分類で絞り込む</button>
				</div>
			</div>
			<table class="col-xs-12 table table-striped">
					<thead></thead>
					<tbody>
						<tr>
							<th>ID</th>
							<th>登録名</th>
							<th>登録名カナ</th>
							<th>単位</th>
							<th>登録名（単位付き）</th>
							<th>分類</th>
							<th>登録レシピ数</th>
							<th></th>
							<th></th>
						</tr>
						<% @ingredients.each do |i| %>
						<tr>
							<td> <%= i.id %></td>
							<td> <%= i.name %></td>
							<td> <%= i.name_kana %></td>
							<td> <%= i.unit.unit_name %></td>
							<td> <%= i.name_with_unit %></td>
							<td> <%= i.category %></td>
							<td> <%#= 使われているレシピ数を算出する %></td>
							<td> <%#= link_to "編集する", path %></td>
							<td> <%#= link_to "削除する", path %></td>
						</tr>
						<% end %>
					</tbody>
			</table>
		</div>
</div>